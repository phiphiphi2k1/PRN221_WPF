<UserControl x:Class="WPF_StudentManagement.CustomControls.BindablePassword"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_StudentManagement.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="800">
    <PasswordBox x:Name="txtPassword"
                             FontSize="13"
                             FontWeight="Medium"
                             FontFamily="Montserrat"
                             Foreground="{StaticResource color1}"
                             CaretBrush="{StaticResource color4}"
                             BorderBrush="{StaticResource color10}"
                             BorderThickness="0,0,0,2"
                             VerticalContentAlignment="Center"
                             Padding="30,0,0,0">

        <PasswordBox.Background>
            <ImageBrush ImageSource="/WPF_StudentManagement;component/Images/padlock.png"
                                        Stretch="Uniform"
                                        AlignmentX="Left"/>
        </PasswordBox.Background>
    </PasswordBox>
</UserControl>
